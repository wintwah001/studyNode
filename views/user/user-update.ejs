<% include ../partial/head.ejs %>
  <div class="container">
    <h1>User Update</h1>
    <form class="" action="/users/update" method="post">
        <input type="hidden" name="id" value="<%=user1._id%>">
      <div class="form-group">
        <label for="username">Name:</label>
        <input type="text" class="form-control" id="username" name="username" value="<%=user1.name%>">
      </div>
      <div class="form-group">
        <label for="useremail">Email:</label>
        <input type="text" class="form-control" id="useremail" name="useremail" value="<%=user1.email%>">
      </div>
      <div class="form-group" <label for="userpwd">Password:</label>
        <input type="password" class="form-control" id="userpwd" name="userpwd" value="<%=user1.password%>">
      </div>
      <input type="submit" class="btn btn-primary" name="click" value="Click me">
    </form>
